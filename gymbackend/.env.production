# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================

# Django Core Settings
DJANGO_SECRET_KEY=your-super-secret-production-key-here-change-this
DJANGO_DEBUG=False
DJANGO_ENVIRONMENT=production
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration
DB_NAME=gymbackend_prod
DB_USER=gymbackend_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Email Configuration (Choose one service)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# WebSocket Settings
BACKEND_DOMAIN=api.yourdomain.com
FRONTEND_DOMAIN=yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
